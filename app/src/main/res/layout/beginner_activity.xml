<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/about_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:padding="@dimen/menu_title_padding"
        android:textSize="@dimen/menu_title" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:fontFamily="Roboto-Medium italic"
        android:textStyle="normal"
        android:padding="10dp"
        android:textSize="25sp" />


    <Button
        android:id="@+id/translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="@drawable/button_background"
        android:textAllCaps="true"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detectedWord"
        android:layout_below="@+id/translate"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="55dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/pronunciation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:background="@drawable/button_background"/>




</RelativeLayout>